extends ../layout

block content
  .project-header
    h1 Archived Projects
  
  if projects.length
    .table-container
      table
        thead
          tr
            th Name
            th Description
            th Role
            th Start Date
            th End Date
            th Actions
        tbody
          each project in projects
            tr
              td= project.name
              td= project.description
              td
                if project.leader && project.leader._id && project.leader._id.toString() === user.id
                  span Leader
                else
                  span Member
              td= project.startDate ? project.startDate.toDateString() : ''
              td= project.endDate ? project.endDate.toDateString() : ''
              td
                .project-actions
                  a.btn.btn-sm.btn-secondary(href='/projects/' + project._id) View
  else
    p.empty-state No archived projects found.
